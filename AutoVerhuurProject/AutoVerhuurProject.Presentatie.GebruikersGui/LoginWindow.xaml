<Window x:Class="AutoVerhuurProject.Presentatie.GebruikersGui.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoVerhuurProject.Presentatie.GebruikersGui"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="TxtVoornaam" HorizontalAlignment="Left" Margin="55,40,0,0" TextWrapping="Wrap" Text="Voornaam" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtBoxVoornaam" HorizontalAlignment="Left" Margin="122,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>

        <TextBlock x:Name="TxtAchternaam" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Achternaam" VerticalAlignment="Top" Margin="55,78,0,0"/>
        <TextBox x:Name="TxtBoxAchternaam" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Margin="132,78,0,0"/>

        <TextBlock x:Name="TxtLijst" HorizontalAlignment="Center" Margin="0,101,0,0" TextWrapping="Wrap" Text="Lijst van klanten" VerticalAlignment="Top" Height="290" Width="566" Background="#7FC8C8C8"/>

        <TextBlock x:Name="TxtEmail" HorizontalAlignment="Left" Margin="451,48,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtBoxEmail" HorizontalAlignment="Left" Margin="496,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnInloggen" Content="Inloggen" HorizontalAlignment="Left" Margin="656,48,0,0" VerticalAlignment="Top" Click="BtnInloggen_Click"/>
    </Grid>
</Window>
