<Window x:Class="AutoVerhuurProject.Presentatie.GebruikersGui.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoVerhuurProject.Presentatie.GebruikersGui"
        mc:Ignorable="d"
        Title="LoginWindow" Height="800" Width="800">
    <Grid>
        <StackPanel Margin="50, 50, 0, 0" Orientation="Horizontal">
            <TextBlock x:Name="TxtVoornaam" Width="70" Text="Voornaam" VerticalAlignment="Top"/>
            <TextBox x:Name="TxtBoxVoornaam" Margin="5, 0, 0, 0" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        </StackPanel>

        <StackPanel Margin="50, 100, 0, 0" Orientation="Horizontal">
            <TextBlock x:Name="TxtAchternaam" Width="70" TextWrapping="Wrap" Text="Achternaam" VerticalAlignment="Top"/>
            <TextBox x:Name="TxtBoxAchternaam" Margin="5, 0, 0, 0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        </StackPanel>

        <StackPanel Margin="50, 200, 0, 0">
            <TextBlock x:Name="TxtEmail" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" RenderTransformOrigin="0.012,-2.17"/>
            <TextBox x:Name="TxtBoxEmail" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Margin="0, 5, 0, 5"/>
            <Button x:Name="BtnInloggen" Content="Inloggen" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BtnInloggen_Click" Width="200" Height="30"/>
        </StackPanel>

        <TextBox x:Name="TxtLijst" TextAlignment="Center" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Background="#7FC8C8C8" HorizontalAlignment="Left" Margin="300,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="650"/>
    </Grid>
</Window>
