<Window x:Class="AutoVerhuurProject.Presentatie.GebruikersGui.OverzichtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoVerhuurProject.Presentatie.GebruikersGui"
        mc:Ignorable="d"
        Title="Overzicht beschikbare auto's" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20, 20, 650, 300">
            <DatePicker x:Name="Datum" SelectedDateChanged="SelectionChanged"/>
            <ComboBox x:Name="Tijd" SelectionChanged="SelectionChanged"/>
        </StackPanel>
        
        
        <StackPanel Margin="200, 20, 450, 0">
            <ComboBox x:Name="ComboBoxLuchthavens" SelectionChanged="SelectionChanged"/>
        </StackPanel>

        <Button x:Name="BtnMaakAscii" Content="Maak asciidoc" HorizontalAlignment="Left" Margin="562,57,0,0" VerticalAlignment="Top" Click="BtnMaakAscii_Click"/>


        <ListBox x:Name="LstBeschikbareAutos" Background="#7FC8C8C8" Margin="20,100,20,20" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding nummerplaat}" Width="100" />
                        <TextBlock Text="{Binding model}" Width="100" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
